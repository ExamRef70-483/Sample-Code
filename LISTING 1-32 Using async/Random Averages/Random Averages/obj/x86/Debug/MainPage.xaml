<Page
    x:Class="Random_Averages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Random_Averages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Random Averages" Margin="5" HorizontalAlignment="Center" Style="{StaticResource HeaderTextBlockStyle}"></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Number of values: " Margin="5" Style="{StaticResource BodyTextBlockStyle}"></TextBlock>
                <TextBox x:ConnectionId='3' Text="100000" Width="200" Name="NumberOfValuesTextBox"></TextBox>
            </StackPanel>
                <Button x:ConnectionId='1' Content="Start"                           Margin="5" HorizontalAlignment="Center"></Button>
            <TextBlock x:ConnectionId='2' Name="ResultTextBlock" Text="Result: " HorizontalAlignment="Center"></TextBlock>
        </StackPanel>

    </Grid>
</Page>

